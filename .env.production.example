# Environment variables for production deployment
# Copy these to your Vercel dashboard or production environment

# Database Configuration
DATABASE_URL=your_production_database_url_here

# NextAuth Configuration  
NEXTAUTH_SECRET=your_secure_random_32_character_secret_here
NEXTAUTH_URL=https://your-domain.vercel.app

# Production Environment
NODE_ENV=production

# Optional: Additional security headers
SECURITY_KEY=your_additional_security_key_here

# Database connection pool settings (optional)
DATABASE_CONNECTION_LIMIT=20
DATABASE_IDLE_TIMEOUT=30000